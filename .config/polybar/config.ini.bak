[colors]
background = #13161a
; abb2bf
foreground = #ffffff

; #61afef
primary = #7f4991
alert = #e06c75

[bar/main]
width = 100%
height = 20pt
radius = 0

; dpi = 96
background = #0000
foreground = ${colors.foreground}
line-size = 2pt
border-size = 4pt

font-0 = "FiraCode NF:style=Regular:size=12;4"
; For borders
font-1 = "Consolas NF:style=Regular:size=16;4"
; Correctly scaled NF symbols
font-2 = "FiraCode NF:style=Regular:size=18;4"
; Fallback symbols
font-3 = "Font Awesome 6 Free:style=Regular:size=14;5"
font-4 = "remixicon:style=Regular:size=14;5"
; Bigger NF symbols
font-5 = "FiraCode NF:style=Regular:size=22;5"
; Workspace symbols
font-6 = "Iosevka:style=Regular:size=10;3"

modules-left = borderL xworkspaces borderR space xwindow
modules-center = borderL date borderR
modules-right = spotify-icon spotify-body space borderL filesystem memory cpu borderR space borderL pulseaudio brightness battery borderR space borderL wlan borderR

cursor-click = pointer
cursor-scroll = ns-resize

enable-ipc = true

tray-position = right

; override-redirect = true

; Formatting modules
[module/borderL]
type = custom/text
content = 
content-foreground = ${colors.background}
content-font = 2

[module/borderR]
type = custom/text
content = 
content-foreground = ${colors.background}
content-font = 2

[module/space]
type = custom/text
content = " "

; Information modules
[module/xworkspaces]
type = internal/xworkspaces

format-background = ${colors.background}
format-font = 7

label-active = 
label-active-foreground = ${colors.primary}
label-active-padding = 1
label-active-underline = ${colors.primary}

label-occupied = 
label-occupied-padding = 1

label-urgent = 
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 1

label-empty = 
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
format-prefix = ""
format-prefix-font = 2
format-prefix-foreground = ${colors.background}
format-prefix-background = #00000000
format-background = ${colors.background}
format-suffix = ""
format-suffix-font = 2
format-suffix-foreground = ${colors.background}
format-suffix-background = #00000000
label = "%title:0:60:...%"

[module/spotify-icon]
type = custom/script
interval = 1
format-background = ${colors.background}
format-prefix = ""
format-prefix-foreground = ${colors.background}
format-prefix-background = #00000000
format = <label>
format-foreground = ${colors.primary}
exec = python /home/js/.config/polybar/scripts/spotify_status.py -f '{play_pause} ' -p ',' --playpause-font=3
click-left = playerctl --player=spotify play-pause

[module/spotify-body]
type = custom/script
interval = 1
format-background = ${colors.background}
format-suffix = ""
format-suffix-foreground = ${colors.background}
format-suffix-background = #00000000
format = <label>
exec = python /home/js/.config/polybar/scripts/spotify_status.py -f '{song}'
click-left = playerctl --player=spotify play-pause

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
format-mounted-background = ${colors.background}
format-mounted-prefix = ""
format-mounted-prefix-foreground = ${colors.primary}
format-mounted-prefix-font = 3
label-mounted = " %percentage_used%%"

format-unmounted-background = ${colors.background}
label-unmounted = %mountpoint% not mounted

[module/memory]
type = internal/memory
interval = 2
format-background = ${colors.background}
format-prefix = " "
format-prefix-foreground = ${colors.primary}
format-prefix-font = 3
label = " %percentage_used%%"

[module/cpu]
type = internal/cpu
interval = 2
format-background = ${colors.background}
format-prefix = " "
format-prefix-foreground = ${colors.primary}
label = " %percentage%%"

[module/pulseaudio]
type = internal/pulseaudio

format-volume-background = ${colors.background}
format-volume = <ramp-volume> <label-volume>
label-volume = "%percentage%% "

ramp-volume-foreground = ${colors.primary}
ramp-volume-font = 5
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 

format-muted-background = ${colors.background}
format-muted-prefix = " "
format-muted-prefix-font = 5
format-muted-prefix-foreground = ${colors.primary}
label-muted = " muted "

[module/brightness]
type = internal/backlight
card = intel_backlight
format-background = ${colors.background}
format-prefix = ""
format-prefix-font = 5
format-prefix-foreground = ${colors.primary}
label = " %percentage%% "

[module/battery]
type = internal/battery
full-at = 99
low-at = 10
battery = BAT0
adapter = ADP1


format-charging = <animation-charging> <label-charging>
format-charging-background = ${colors.background}
animation-charging-foreground = ${colors.primary}
animation-charging-font = 6
label-charging = "%percentage%%"

animation-charging-0 = ""
animation-charging-1 = ""
animation-charging-2 = ""
animation-charging-3 = ""
animation-charging-4 = ""

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-background = ${colors.background}
ramp-capacity-foreground = ${colors.primary}
ramp-capacity-font = 6
label-discharging = "%percentage%%"

ramp-capacity-0 = ""
ramp-capacity-1 = ""
ramp-capacity-2 = ""
ramp-capacity-3 = ""
ramp-capacity-4 = ""

format-low = <animation-low> <label-low>
format-low-background = ${colors.background}
animation-low-foreground = ${colors.primary}
animation-low-font = 6
label-low = "%percentage%%"
animation-low-0 = "!"
animation-low-1 = " "

format-full = <ramp-capacity> <label-full>
format-full-background = ${colors.background}
label-full = "%percentage%%"

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>

[module/wlan]
inherit = network-base
interface-type = wireless

format-connected-prefix = ""
format-connected-prefix-font = 5
format-connected-prefix-foreground = ${colors.primary}
format-connected-background = ${colors.background}
label-connected = " %essid% %local_ip%"
format-disconnected-prefix = ""
format-disconnected-prefix-font = 5
format-disconnected-prefix-foreground = ${colors.primary}
format-disconnected-background = ${colors.background}
label-disconnected = " disconnected"

[module/date]
type = internal/date
interval = 1

date = %H:%M
date-alt = %d-%m-%Y %H:%M:%S

label = "%date%"
label-background = ${colors.background}

[settings]
screenchange-reload = true
pseudo-transparency = true

; vim:ft=dosini
